	left 0
	right 0
	top 100px
	margin 0 auto
	max-width 800px
	z-index 1000
	#cancelar
		color gris
		position absolute
		right .5em
		top .5em
		font-size 2em
		cursor pointer
	form
		width 80%
		margin 2em auto 0 auto
		text-align center
		& label
			display block
			font-weight bold
			color verde
			text-align left
			font-size 1.2em
		& input[type="text"], input[type="password"], input[type="email"]
			border none
			box-shadow 0px 0px 2px rgba(0,0,0,.3)
			outline none
			color gris
			font-size 1.2em
			padding .5em .5em
			margin .6em 0
			width 100%
			&:focus
				border 3px solid gris
		& select
			border none
			box-shadow 0px 0px 2px rgba(0,0,0,.3)
			outline none
			color gris
			height 35px
			font-size 1.2em
			padding .8em .5em
			margin .6em 0
			width 100%
		& input[type="submit"]
			background none
			border 2px solid gris
			border-radius .3em
			color gris
			font-size 1.2em
			margin .5em 0
			padding .4em
			&:hover
				background gris
				color white


